@page
@model WebAppRazor.Pages.Staff.SlotManageModel
@{
    ViewData["Title"] = "Quản lý giá theo khung giờ";
}
<!DOCTYPE html>
<html data-bs-theme="light" lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <title>Badminton Booking Platform</title>
    <link rel="stylesheet" href="~/assets/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/assets/css/swiper-icons.css">
    <link rel="stylesheet" href="~/assets/css/bs-theme-overrides.css">
    <link rel="stylesheet" href="~/assets/css/Banner-Heading-Image-images.css">
    <link rel="stylesheet" href="~/assets/css/Navbar-With-Button-icons.css">
    <link rel="stylesheet" href="~/assets/css/Simple-Slider-swiper-bundle.min.css">
    <link rel="stylesheet" href="~/assets/css/Simple-Slider.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-md py-3">
            <div class="container-fluid">
                <a class="navbar-brand d-flex align-items-center" href="#">
                    <span><strong>Bacol</strong></span>
                </a>
                <button data-bs-toggle="collapse" class="navbar-toggler" data-bs-target="#navcol-1">
                    <span class="visually-hidden">Toggle navigation</span>
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navcol-1">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item"></li>
                        <li class="nav-item"></li>
                        <li class="nav-item"></li>
                        <li class="nav-item"></li>
                        <li class="nav-item"></li>
                    </ul>
                    <a class="btn btn-secondary" role="button" asp-page-handler="Logout">Đăng xuất</a>
                </div>
            </div>
        </nav>
    </header>
    <main class="bg-light" style="/*padding-bottom: 2rem;*/min-height: 80vh;">
        <div class="d-flex">
            <div style="min-height: 80vh;background: var(--bs-white);">
                <div class="p-4 pb-2 pt-2">
                    <a href="/Staff/ClubManage" style="text-decoration: none;color: var(--bs-black);">Câu lạc bộ</a>
                </div>
                <div class="p-4 pb-2 pt-2">
                    <a href="/Staff/CourtManage" style="text-decoration: none;color: var(--bs-black);">Quản lý sân</a>
                </div>
                <div class="p-4 pb-2 pt-2">
                    <a href="/Staff/SlotManage" style="text-decoration: none;color: var(--bs-black);">Quản lý giá theo khung giờ</a>
                </div>
                <div class="p-4 pb-2 pt-2">
                    <a href="/Staff/ClubBookManage" style="text-decoration: none;color: var(--bs-black);">Lịch đặt sân</a>
                </div>
                <div class="p-4 pb-2 pt-2">
                    <a href="/Staff/MatchManage" style="text-decoration: none;color: var(--bs-black);">Lịch thi đấu</a>
                </div>
            </div>
            <div style="flex: 1;" class="p-4">
                <h2 class="fs-4 text-center mt-0">Quản lý giá theo khung giờ</h2>
                @* CHECK IF MESSAGE NOT NULL *@
                @if (!string.IsNullOrEmpty(Model.Message))
                {
                    var messageClass = Model.Message.StartsWith(Constants.MessagePrefix.ERROR.ToString()) ? "alert-danger" :
                    Model.Message.StartsWith(Constants.MessagePrefix.SUCCESS.ToString()) ? "alert-success" :
                    Model.Message.StartsWith(Constants.MessagePrefix.WARNING.ToString()) ? "alert-warning" :
                    "alert-info";

                    <div class="alert @messageClass" role="alert">
                        <p class="m-0 p-1">@Model.Message.Substring(1)</p>
                    </div>
                }

                <form method="get" style="margin-top: 16px;" class="mt-4">
                    <div class="d-flex flex-lg-row justify-content-between">
                        <button style="margin-left: 24px" class="btn btn-primary align-self-end mt-4" type="button" data-bs-target="#add-modal" data-bs-toggle="modal">
                            Thêm giờ
                        </button>
                        <div class="d-flex" style="column-gap: 1rem;margin-left: auto;">
                            <div>
                                <p style="margin-bottom: 8px;margin-top: 8px;">Sắp xếp theo</p>
                                <select name="sortProperty" class="form-select">
                                    <option value="Hour" selected="">Khung giờ</option>
                                    <option value="Price">Giá tiền</option>
                                </select>
                            </div>
                            <div>
                                <p style="margin-bottom: 8px;margin-top: 8px;">Thứ tự sắp xếp</p>
                                <select name="sortOrder" class="form-select">
                                    <option value="0" selected="">Mặc định</option>
                                    <option value="1">Tăng dần</option>
                                    <option value="-1">Giảm dần</option>
                                </select>
                            </div>
                            <input class="btn btn-primary align-self-end mt-4" type="submit" style="height: fit-content;margin-top: 11px;" value="Sắp xếp">
                        </div>
                    </div>
                </form>
                <div style="flex: 1;" class="p-4">
                    <!-- Button thêm giờ -->

                    <div class="table-responsive mt-4">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th class="text-center">Khung giờ</th>
                                    <th class="text-center">Giá tiền</th>
                                    <th class="text-center">Thao tác</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var slot in Model.Slots)
                                {
                                    <tr>
                                        <td class="text-center">@($"{slot.StartTime:HH\\:mm} - {slot.EndTime:HH\\:mm}")</td>
                                        <td class="text-center">@($"{slot.Price:N0} (đồng)")</td>
                                        <td class="text-center">
                                            <a asp-page="./SlotUpdate" class="btn btn-light" role="button" asp-route-id="@slot.SlotId">Cập nhật</a>
                                            <a asp-page="./SlotDelete" class="btn btn-danger ms-4" role="button" asp-route-id="@slot.SlotId">Xóa</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <!-- thêm giờ-->
        <div class="modal fade" role="dialog" tabindex="-1" id="add-modal">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <form method="post" asp-page-handler="AddSlot">
                        <div class="modal-header">
                            <h4 class="modal-title fs-5">Thêm giờ</h4>
                            <button class="btn-close" type="button" aria-label="Close" data-bs-dismiss="modal"></button>
                        </div>
                        <div class="modal-body">
                            <label class="form-label" style="display: block;">
                                Giờ bắt đầu
                                <input name="NewSlot.StartTime" class="form-control mt-2" type="time" step="900">
                            </label>
                            <label class="form-label" style="display: block;">
                                Giờ kết thúc
                                <input name="NewSlot.EndTime" class="form-control mt-2" type="time" step="900">
                            </label>
                            <label class="form-label mt-4" style="display: block;">
                                Giá tiền
                                <input min="1000" max="500000" step="1000" name="NewSlot.Price" class="form-control mt-2" type="text" placeholder="Đơn vị: đồng">
                            </label>
                        </div>
                        <div class="modal-footer">
                            <button class="btn btn-light" type="button" data-bs-dismiss="modal">Hủy</button>
                            <button class="btn btn-primary" type="submit">Lưu</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </main>
    <script src="~/assets/bootstrap/js/bootstrap.min.js"></script>
</body>
</html>
